[Unit]
Description=Consul Agent
After=network.target

[Service]
User=consul
Group=consul
Environment="GOMAXPROCS=2"
ExecStart=/usr/local/bin/consul agent -config-dir /etc/consul.d/server
ExecReload=/bin/kill -9 $MAINPID
KillSignal=SIGTERM
Restart=on-failure
RestartSec=1

[Install]

WantedBy=default.target
